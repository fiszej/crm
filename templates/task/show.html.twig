{% extends "base.html.twig" %}

{% block title %}
	Task
{% endblock %}

{% block content %}
	<div class="col-9 mt-4">
		<div class="card mb-4">
			<div class="card-body p-3">
				<div class="row">
					<div class="card-header pb-0 p-3">
						<div class="row">
							<p class="text-gradient text-dark mb-2 text-sm">Task #{{ task.id }}</p>
							<div class="col-md-8 d-flex align-items-center">
								<div>
									<img src="/img/task-logo/{{ task.logo }}" class="avatar avatar-sm rounded-circle me-2" alt="spotify">
								</div>
								<h3 class="mb-0">{{ task.name }}</h3>
							</div>
							<div class="col-md-4 text-end">
								<a href="/task/{{ task.id }}/edit">
									<i class="fas fa-user-edit text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Profile"></i>
								</a>
								<a href="/task/{{ task.id }}/delete">
									<i class="fas fa-user-edit text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete"></i>
								</a>
							</div>
						</div>
					</div>
					<div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
						<div class="card card-blog card-plain">
							<div class="position-relative"></div>
							<div class="card-body px-1 pb-0">
								<p class="mb-4 text-sm">
									<strong class="text-dark">Start date:
									</strong>
									{{ task.createdAt|date('Y-m-d H:i') }}
								</p>
								<p class="mb-4 text-sm">
									<strong class="text-dark">Time:
									</strong>
									{{ task.time }}h
								</p>
								<p class="mb-4 text-sm">
									<strong class="text-dark">Remaining time to deadline

									</strong>
									{{ timeToDeadline }}h
								</p>
								<p class="mb-4 text-sm">
									<strong class="text-dark">Deadline:
									</strong>
									{{ task.deadline|date('Y-m-d H:i')}}
								</p>
								<p class="mb-4 text-sm">
									<strong class="text-dark">Comments:
									</strong>
									{{ task.comments }}
								</p>
								<p class="mb-4 text-sm">
									<strong class="text-dark">Company:
									</strong>
									{{ task.customerId.company }}
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}


