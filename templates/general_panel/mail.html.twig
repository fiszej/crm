						<span class="ms-1">Create message</span>
					</a>
				</li>
			</div>
		</div>
		<div class="container-fluid py-4">
			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}
			<div class="row">
				<div class="col-12">
					<div class="card mb-4">
						<div class="card-header pb-0">
							<h6>Messages</h6>
						</div>
						<div class="card-body px-0 pt-0 pb-2">
							<div class="table-responsive p-0">
								<table class="table align-items-center mb-0">
									<thead>
										<tr>
											<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ">Subject</th>
											<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">Customer</th>
											<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">Employee</th>
											<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">Status</th>
											<th class="text-secondary opacity-7"></th>
										</tr>
									</thead>
									<tbody>
										{% for mail in mails %}
									<tr>
										<td>
											<div class="d-flex px-2">
							
												<div class="my-auto">
													<a href="/mail/{{ mail.id }}" class="text-secondary font-weight-bold text-xl">
														{{ mail.subject }}
													</a>
												</div>
											</div>
										</td>
											</td>
											<td class="text-center">
											<span class="text-xs font-weight-bold">{{ mail.customer.company }}</span>
                                            <p class="text-xs text-secondary mb-0">{{ mail.customer.email }}</p>
										</td>
										</td>
											<td class="text-center">
											<span class="text-xs font-weight-bold">{{ mail.employee.name }}</span>
										</td>
										</td>
											<td class="text-center">
											<span class="text-xs font-weight-bold">{{ mail.status }}</span>
										</td>
										<td>
										<a href="/mail/{{ mail.id }}">
											<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
  													<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
											</svg>										
										</a>
										</td>
									</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}